<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/back_verde">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView android:text="@string/Futebas" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="0sp"
            >
            <ImageButton

                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/anterior"
                android:src="@android:drawable/ic_media_previous"

                android:textAlignment="center"
                android:layout_margin="5sp"
                />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/stop"
                android:src="@drawable/bola"
                android:layout_margin="5sp"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pause"
                android:src="@android:drawable/ic_media_pause"
                android:layout_margin="5sp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/play"
                android:src="@drawable/playnew"
                android:layout_margin="5sp"
                />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/proximo"
                android:src="@android:drawable/ic_media_next"
                android:layout_margin="5sp"/>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/com_facebook_share_button_text_color"
        >




        <TextView android:text="   0" android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0040FF"
            android:gravity="center"

            />
        <TextView android:text="X" android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"

            />
        <TextView android:text="0" android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF0000"
            android:gravity="center"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <Chronometer

            android:id="@+id/chronometer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100sp"
            android:text="Chronometer"
            android:textAlignment="center"
            android:textSize="60sp"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            />


    </LinearLayout>

</LinearLayout>

